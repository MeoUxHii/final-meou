{
  "manifest_version": 3,
  "name": "MeoU",
  "version": "2.5.0",
  "description": "Mọi thứ để tao lo",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "geolocation",
    "declarativeNetRequest",
    "scripting",
    "sidePanel",
    "offscreen"
  ],
  "host_permissions": [
    "https://texttospeech.googleapis.com/*",
    "https://translation.googleapis.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://vision.googleapis.com/*",
    "https://api.open-meteo.com/*",
    "https://www.googleapis.com/*",
    "https://discord.com/*",
    "https://cdn.discordapp.com/*",
    "https://lens.google.com/*",
    "https://www.google.com/*",
    "<all_urls>"
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "side_panel": {
    "default_path": "magic-eye/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "assets.js",
        "utils.js",
        "ui/ui-core.js",
        "logic/state.js",
        "ui/ui-button.js",
        "ui/ui-popup.js",
        "ui/ui-history.js",
        "wibu-mode.js",
        "logic/magic.js",
        "logic/translate.js",
        "logic/events.js",
        "logic/youtube-premium-logo.js"
      ],
      "world": "ISOLATED",
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_discord",
        "enabled": true,
        "path": "rules/discord.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "media/*.mp3",
        "content.css",
        "pictures/*.webp",
        "voice/*/*.mp3",
        "avatar/*.png",
        "fonts/*.ttf"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "game/game.html",
        "game/images/*",
        "game/css/*",
        "game/js/*",
        "game-source/assets/*",
        "game-source/js/*",
        "game-source/scripts/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "magic-eye/offscreen.html",
        "magic-eye/style.css",
        "magic-eye/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "translate-text": {
      "suggested_key": {
        "default": "Alt+Shift+T"
      },
      "description": "Dịch văn bản đã chọn"
    },
    "activate_magic_eye": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      },
      "description": "Kích hoạt Meou Magic Eye"
    }
  }
}